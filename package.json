{
    "name": "html-to-pdf-action",
    "version": "1.0.0",
    "description": "GitHub Action to convert HTML to PDF with full support for modern HTML features",
    "main": "src/index.js",
    "scripts": {
      "test": "node src/index.js --source=examples/test.html --output=output/test.pdf",
      "start": "node src/index.js"
    },
    "bin": {
      "html-to-pdf": "src/index.js"
    },
    "keywords": [
      "github-action",
      "html",
      "pdf",
      "converter"
    ],
    "author": "narthanaj",
    "license": "MIT",
    "dependencies": {
      "@actions/core": "^1.10.0",
      "@actions/github": "^5.1.1",
      "puppeteer": "^19.7.0",
      "fs-extra": "^11.1.0"
    },
    "devDependencies": {
      "jest": "^29.4.3"
    }
  }